depends kmod
depends libxml2

optional_depends krb5 "" "" "for Kerberos network authentification support"

optional_depends openldap \
                 "--with-openldap" \
                 "--without-openldap" \
                 "for openldap support"

optional_depends libtirpc \
                 "--with-libtirpc" \
                 "--without-libtirpc" \
                 "for Transport-Independent RPC support"

if ! module_installed openrc; then
   optional_depends systemd \
                    "--with-systemd" \
                    "--without-systemd" \
                    "for systemd support"
fi
