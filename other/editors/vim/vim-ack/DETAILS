          MODULE=vim-ack
         VERSION=1.0.9
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/ack.vim-$VERSION
 SOURCE_URL_FULL=https://github.com/mileszs/ack.vim/archive/$VERSION.tar.gz
      SOURCE_VFY=sha256:598af55eed01886428027ea26f3f99a5029ece88c28e34c22fb94d09ac552cab
        WEB_SITE=https://github.com/mileszs/ack.vim/
         ENTERED=20200817
         UPDATED=20200817
           SHORT="A vim frontend for the Perl module App::Ack"

cat << EOF
This plugin was designed as a Vim frontend for the programmer's search tool ack.
ack can be used as a replacement for 99% of the uses of grep. The plugin allows
you to search with ack from within Vim and shows the results in a split window.
EOF
