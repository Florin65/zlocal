          MODULE=vim-editorconfig
         VERSION=0.3.3
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/editorconfig-vim-$VERSION
 SOURCE_URL_FULL=http://github.com/editorconfig/editorconfig-vim/archive/v$VERSION.tar.gz
      SOURCE_VFY=sha256:fd579672c426a089835e9bc57a1fd5fc18dba77c014b67141153372e83c92c57
