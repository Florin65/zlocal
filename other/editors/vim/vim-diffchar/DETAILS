          MODULE=vim-diffchar
         VERSION=8.6
          SOURCE=$MODULE-$VERSION.zip
SOURCE_DIRECTORY=$BUILD_DIRECTORY/undotree-rel_$VERSION
  SOURCE_URL_FULL=http://www.vim.org/scripts/download_script.php?src_id=26254
      SOURCE_VFY=sha256:501740dc80ca5e5f9b486510e672ed6a9aa35b433cf7786c474380d7f324ee31
        WEB_SITE=http://github.com/rickhowe/diffchar.vim/
         ENTERED=20170320
         UPDATED=20190829
           SHORT="Improved vim's diff mode"

cat << EOF
This plugin has been developed in order to make diff mode more useful.
Vim highlights all the text in between the first and last different
characters on a changed line. But this plugin will find the exact
differences between them, character by character.
EOF
