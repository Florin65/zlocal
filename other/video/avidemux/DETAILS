      SOURCE_URL=$SFORGE_URL/$MODULE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE\_$VERSION
      SOURCE_VFY=sha256:6804b48b7d76b6cf7b67360c0dff474edc8d9b4952b6197f64c7d248fcf8cd1d
