default_pre_build &&

# Fix OS naming
sedit 's|=GNU/Linux|="Lunar Linux"|' util/grub.d/10_linux.in &&
sedit 's|GNU/Linux|Lunar Linux|'    util/grub.d/10_linux.in &&

# Remove not working langs which need LC_ALL=C.UTF-8
sedit 's#en@cyrillic en@greek##g' po/LINGUAS &&

# Fix DejaVuSans.ttf location so that grub-mkfont can create *.pf2 files for starfield theme
sedit 's|/usr/share/fonts/dejavu|/usr/share/fonts/dejavu /usr/share/fonts/TTF|g' configure.ac &&

./autogen.sh