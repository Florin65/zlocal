depends gawk
depends ncurses

optional_depends acl   "--enable-acl" "--disable-acl" "for Access Control List support"
optional_depends gpm   "--enable-gpm" "--disable-gpm" "for GPM mouse support"
optional_depends libXt "--with-x=yes" "--with-x=no"   "for XOrg support"

optional_depends python \
                 "--enable-python3interp=dynamic" \
                 "--disable-python3interp" \
                 "for Python 3.x interpreter support"

optional_depends python2 \
                 "--enable-pythoninterp=dynamic" \
                 "--disable-pythoninterp" \
                 "for Python 2.x interpreter support" \
                 "n"

optional_depends perl \
                 "--enable-perlinterp=yes" \
                 "--disable-perlinterp" \
                 "for Perl interpreter support"

optional_depends lua \
                 "--enable-luainterp=dymanic" \
                 "--disable-luainterp" \
                 "for Lua interpreter support"

optional_depends ruby \
                 "--enable-rubyinterp=dynamic" \
                 "--disable-rubyinterp" \
                 "for Ruby interpreter support"

optional_depends tcl \
                 "--enable-tclinterp=dynamic" \
                 "--disable-tclinterp" \
                 "for Tcl interpreter support" \
                 "n"

optional_depends gtk+-3 \
                 "--enable-gui=gtk3" "" \
                 "for GTK 3.x Graphical User Interface support" \
                 "n"

optional_depends gtk+-2 \
                 "--enable-gui=gtk2" "" \
                 "for GTK 2.x Graphical User Interface support" \
                 "n"

optional_depends libcanberra \
                 "--enable-canberra" \
                 "--disable-canberra" \
                 "for XDG-compatible sound generation" \
                 "n"
